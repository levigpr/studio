
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isTherapist() {
      return request.auth.token.rol == 'terapeuta';
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isPacienteOwner(doc) {
      return request.auth.uid == doc.pacienteUid;
    }

    // --- Collection Rules ---

    match /usuarios/{userId} {
      // ANY authenticated user can create their own profile during signup.
      // Therapists can also create users via the Cloud Function.
      allow create: if request.auth != null;

      // Users can only read their own profile.
      // Therapists can read any user's profile.
      allow read: if isOwner(userId) || isTherapist();
      
      // Users can only update their own profile.
      allow update: if isOwner(userId);
      
      // No one can delete user profiles from the client.
      allow delete: if false;
    }
    
    match /expedientes/{expedienteId} {
      allow read: if isTherapist() || isPacienteOwner(resource.data);
      allow create: if isTherapist() && request.resource.data.terapeutaUid == request.auth.uid;
      allow update: if isTherapist() && resource.data.terapeutaUid == request.auth.uid;
      allow delete: if false;
    }
    
    match /sesiones/{sesionId} {
      allow read: if isTherapist() || isPacienteOwner(resource.data);
      allow list: if isTherapist();
      allow create: if isTherapist() && request.resource.data.terapeutaUid == request.auth.uid;
      allow update: if isTherapist() && resource.data.terapeutaUid == request.auth.uid;
      allow delete: if false;
    }

    match /avances/{avanceId} {
      allow read: if isTherapist() || isPacienteOwner(resource.data);
      allow list: if isTherapist();
      // Pacientes can create their own progress reports
      allow create: if isPacienteOwner(request.resource.data);
      allow update: if false;
      allow delete: if false;
    }
    
    match /galerias/{galeriaId} {
      allow read: if isTherapist() || request.auth.uid in resource.data.pacientesAsignados;
      allow create, update: if isTherapist() && request.resource.data.creadaPor == request.auth.uid;
      allow delete: if false;
    }
  }
}
