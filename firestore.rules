
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    match /usuarios/{userId} {
      allow create: if isSignedIn();
      allow read: if isSignedIn();
      allow update: if isSignedIn() && request.auth.uid == userId;
      allow delete: if false; // Nadie puede borrar perfiles
    }

    match /expedientes/{expedienteId} {
      // Los terapeutas pueden listar los expedientes donde ellos son el terapeuta.
      allow list: if isSignedIn() && request.query.resource.data.terapeutaUid == request.auth.uid;
      
      // Un usuario puede leer un expediente si es el paciente o el terapeuta asignado.
      allow get: if isSignedIn() && (request.auth.uid == resource.data.pacienteUid || request.auth.uid == resource.data.terapeutaUid);

      // Solo el terapeuta asignado puede crear, actualizar o borrar el expediente.
      allow write: if isSignedIn() && request.auth.uid == request.resource.data.terapeutaUid;
    }

    match /{path=**}/sesiones/{sesionId} {
        // Un usuario puede leer sesiones si es el paciente o el terapeuta asignado
        allow read: if isSignedIn() && (request.auth.uid == resource.data.pacienteUid || request.auth.uid == resource.data.terapeutaUid);
        // Solo el terapeuta puede escribir en las sesiones
        allow write: if isSignedIn() && request.auth.uid == request.resource.data.terapeutaUid;
    }
    
    match /{path=**}/avances/{avanceId} {
       // Un usuario puede leer avances si es el paciente o el terapeuta asignado
       allow read: if isSignedIn() && (request.auth.uid == resource.data.pacienteUid || request.auth.uid == resource.data.terapeutaUid);
       // Pacientes y terapeutas pueden crear avances
       allow create: if isSignedIn() && (request.auth.uid == request.resource.data.pacienteUid || request.auth.uid == request.resource.data.terapeutaUid);
       // Solo el terapeuta puede actualizar (en el futuro)
       allow update, delete: if isSignedIn() && request.auth.uid == request.resource.data.terapeutaUid;
    }

    match /galerias/{galeriaId} {
      // El terapeuta creador puede hacer todo.
      allow write: if isSignedIn() && request.auth.uid == request.resource.data.creadaPor;
      // El terapeuta creador y los pacientes asignados pueden leer.
      allow read: if isSignedIn() && (request.auth.uid == resource.data.creadaPor || request.auth.uid in resource.data.pacientesAsignados);
    }
  }
}
