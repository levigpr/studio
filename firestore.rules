
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is a therapist
    function isTherapist() {
      return request.auth.token.rol == 'terapeuta';
    }

    // Reglas para perfiles de usuario
    match /usuarios/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId;
    }

    // Reglas para expedientes
    match /expedientes/{expedienteId} {
      allow read: if request.auth.uid == resource.data.terapeutaUid || request.auth.uid == resource.data.pacienteUid;
      allow list: if isTherapist(); // Therapists can list expedients to find their own
      allow create: if isTherapist() && request.resource.data.terapeutaUid == request.auth.uid;
      allow update, delete: if request.auth.uid == resource.data.terapeutaUid;
    }

    // Reglas para sesiones
    match /sesiones/{sesionId} {
        allow read: if request.auth.uid == resource.data.terapeutaUid || request.auth.uid == resource.data.pacienteUid;
        allow list: if request.auth != null; // Allow listing for authenticated users, filtered on client
        allow create: if isTherapist() && request.resource.data.terapeutaUid == request.auth.uid;
        allow update: if request.auth.uid == resource.data.terapeutaUid;
    }

    // Reglas para avances
    match /avances/{avanceId} {
        allow read: if request.auth.uid == resource.data.terapeutaUid || request.auth.uid == resource.data.pacienteUid;
        allow list: if request.auth != null; // Allow listing for authenticated users, filtered on client
        allow create: if request.resource.data.pacienteUid == request.auth.uid || request.resource.data.terapeutaUid == request.auth.uid;
    }
    
    // Reglas para galerias
    match /galerias/{galeriaId} {
      allow read: if request.auth != null;
      allow create, update, delete: if isTherapist() && request.auth.uid == resource.data.creadaPor;
    }
  }
}

    